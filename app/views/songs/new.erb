<h1>Create a new Song</h1>

<form method="POST" action="/songs">
  <label>Song Name: </label>

  <input type="text" name="song[name]" id="song_name">

   <br></br>

  <label>Artist Name: </label>
  
  <input type="text" name="artist[name]" id="artist_name">

   <br></br>

   <label>Choose an existing genre:</label>

    <br></br>

    <% Genre.all.each do |genre| %>
      <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %></input>
    <% end %>

    <br></br>

  <input type="submit" value="Create">
</form>